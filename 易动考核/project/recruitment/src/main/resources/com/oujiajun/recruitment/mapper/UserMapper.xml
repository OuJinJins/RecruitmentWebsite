<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.oujiajun.recruitment.dao.UserDao">

    <insert id="insertUser" parameterType="User">
        insert into recruitment.user
        values(#{id},
               #{email},
               #{username},
               #{password},
               #{gender},
               #{city},
               #{briefIntroduction},
               #{age},
               #{education}
       )
    </insert>


    <update id="updateUserById" parameterType="User">
        update user
        set
            username=#{username},
            gender=#{gender},
            city=#{city},
            brief_introduction=#{briefIntroduction},
            age=#{age},
            eduction=#{eduction}
        where id=#{id}
    </update>

    <select id="queryUserByUsernameAndPassword" parameterType="User" resultType="User">
        select id,
               username,
               password,
               gender,
               city,
               brief_introduction,
               age,
               eduction
        from user
        where username=#{username}
          And password=#{password}
    </select>

    <select id="queryUserById" parameterType="Int" resultType="User">
        select id,
               username,
               password,
               gender,
               city,
               brief_introduction,
               age,
               eduction
        from user
        where id=#{id}
    </select>

</mapper>